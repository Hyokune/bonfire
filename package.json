{
  "name": "bonfire",
  "version": "1.0.0",
  "description": "A Dark Souls tool to help backup saves",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.ts",
    "react:dev": "webpack serve --config webpack.react.dev.ts",
    "electron:dev": "nodemon",
    "dev": "concurrently --kill-others \"npm run react:dev\" \"npm run electron:dev\"",
    "start": "npm run build && electron dist/main.js",
    "package": "npm run build && electron-builder build --publish never",
    "lint": "eslint --parser-options project:tsconfig.json --ext ts,js src",
    "typeCheck": "tsc --noEmit"
  },
  "build": {
    "productName": "Bonfire",
    "appId": "com.bonfire.app",
    "win": {
      "target": [
        "portable"
      ]
    },
    "extends": null,
    "files": [
      "dist",
      "package.json",
      "node_modules"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hyokune/bonfire.git"
  },
  "author": {
    "name": "Lance Lee",
    "url": "https://github.com/Hyokune"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hyokune/bonfire/issues"
  },
  "homepage": "https://github.com/Hyokune/bonfire#readme",
  "devDependencies": {
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/webpack": "5.28.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "concurrently": "7.6.0",
    "electron": "23.1.2",
    "electron-builder": "24.0.0",
    "electron-is-dev": "2.0.0",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "goober": "2.1.12",
    "html-webpack-plugin": "5.5.0",
    "nodemon": "2.0.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "5.8.0"
  }
}
